{
    "Target": {
        "prefix": "target",
        "body": [
            "target $1;",
            "$2"
        ],
        "description": "Declares the target"
    },
    "Router": {
        "prefix": "router",
        "body": [
            "router $1",
            "{",
            "    $2",
            "}",
            "$3"
        ],
        "description": "Creates a router"
    },
    "Auth Block": {
        "prefix": "auth",
        "body": [
            "auth $1 as $2 (",
            "    source: $3,",
            "    field: $4,",
            ")",
            "$5"
        ],
        "description": "Creates an auth block"
    },
    "Authenticate": {
        "prefix": "authenticate",
        "body": [
            "authenticate $1"
        ],
        "description": "Creates an authenticate clause"
    }
}